{
  "name": "react-todo",
  "version": "1.0.0",
  "private": true,
  "description": "React TODO App",
  "main": "server.js",
  "author": "ybiquitous <10koba01@gmail.com>",
  "repository": "ybiquitous/react-todo",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "prestart": "webpack --config webpack.config.server.babel.js",
    "start": "DEBUG=app node server.bundle.js",
    "build": "webpack",
    "dev": "webpack-dev-server --open",
    "test": "ava",
    "test:ci": "ava --tap",
    "test:watch": "ava --watch",
    "pretest:e2e": "npm run build",
    "test:e2e": "testcafe chrome test/e2e -S -s tmp/screenshots --app \"npm run start\"",
    "test:e2e:ci": "npm run test:e2e -- --reporter minimal",
    "eslint:all": "eslint --ext=.js,.jsx --ignore-path=.gitignore --max-warnings=0 .",
    "stylelint:all": "stylelint --ignore-path=.gitignore \"./src/styles/**/*\"",
    "lint": "concurrently \"npm run eslint:all\" \"npm run stylelint:all\"",
    "precommit": "concurrently lint-staged \"npm run test:ci\"",
    "heroku-postbuild": "npm run build"
  },
  "ava": {
    "files": [
      "**/__tests__/**/*"
    ],
    "require": [
      "babel-register",
      "./test/css-null-compiler"
    ],
    "babel": "inherit"
  },
  "lint-staged": {
    "*.@(js|jsx)": [
      "eslint --fix --max-warnings=0",
      "git add"
    ],
    "*.@(css|scss)": "stylelint"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11",
    "not ie_mob < 11"
  ],
  "dependencies": {
    "autoprefixer": "*",
    "babel-cli": "*",
    "babel-core": "*",
    "babel-loader": "*",
    "babel-preset-env": "*",
    "babel-preset-react": "*",
    "clean-webpack-plugin": "*",
    "compression": "*",
    "concurrently": "*",
    "css-loader": "*",
    "debug": "*",
    "ejs": "*",
    "express": "^5.0.0-alpha.2",
    "extract-text-webpack-plugin": "*",
    "postcss-loader": "*",
    "precss": "*",
    "prop-types": "*",
    "react": "*",
    "react-dom": "*",
    "style-loader": "*",
    "webpack": "*",
    "webpack-manifest-plugin": "*",
    "webpack-node-externals": "*"
  },
  "devDependencies": {
    "ava": "*",
    "babel-register": "*",
    "enzyme": "*",
    "eslint": "*",
    "eslint-config-ybiquitous": "*",
    "eslint-plugin-testcafe": "*",
    "husky": "*",
    "lint-staged": "*",
    "react-test-renderer": "*",
    "sinon": "*",
    "stylelint": "*",
    "stylelint-config-standard": "*",
    "stylelint-order": "*",
    "testcafe": "<1",
    "webpack-dev-server": "*"
  }
}
