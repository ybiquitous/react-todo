{
  "name": "react-todo",
  "version": "1.0.0",
  "private": true,
  "description": "React TODO App",
  "main": "server.js",
  "author": "ybiquitous <10koba01@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ybiquitous/react-todo.git"
  },
  "engines": {
    "node": "7"
  },
  "scripts": {
    "start": "DEBUG=app node -r babel-register server.js",
    "build": "webpack",
    "dev": "webpack-dev-server",
    "test": "mocha --reporter dot --compilers jsx:babel-register test",
    "test:watch": "npm test -- --watch",
    "test:e2e": "wdio wdio.conf.js",
    "eslint:all": "eslint --ext=.js,.jsx --ignore-path=.gitignore --max-warnings=0 .",
    "stylelint:all": "stylelint --ignore-path=.gitignore \"./src/styles/**/*\"",
    "lint": "concurrently \"npm run eslint:all\" \"npm run stylelint:all\"",
    "prewebdriver": "webdriver-manager update",
    "webdriver": "webdriver-manager start --detach",
    "webdriver:stop": "webdriver-manager shutdown",
    "lint-staged": "lint-staged",
    "postinstall": "if [ $BUILD_ASSETS ]; then npm run build; fi"
  },
  "lint-staged": {
    "*.@(js|jsx)": [
      "eslint --fix --max-warnings=0",
      "git add"
    ],
    "*.@(css|scss)": "stylelint"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "dependencies": {
    "autoprefixer": "*",
    "babel-core": "*",
    "babel-loader": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "babel-register": "*",
    "css-loader": "*",
    "debug": "*",
    "ejs": "*",
    "express": "*",
    "extract-text-webpack-plugin": "beta",
    "postcss-loader": "*",
    "precss": "*",
    "react": "*",
    "react-dom": "*",
    "react-tap-or-click": "*",
    "style-loader": "*",
    "webpack": "*",
    "webpack-manifest-plugin": "*"
  },
  "devDependencies": {
    "babel-preset-power-assert": "*",
    "concurrently": "*",
    "enzyme": "*",
    "eslint": "*",
    "eslint-config-ybiquitous": "*",
    "lint-staged": "*",
    "mocha": "*",
    "power-assert": "*",
    "pre-commit": "*",
    "react-addons-test-utils": "*",
    "sinon": "*",
    "stylelint": "*",
    "stylelint-config-standard": "*",
    "wdio-mocha-framework": "*",
    "webdriver-manager": "*",
    "webdriverio": "*",
    "webpack-dev-server": "*"
  }
}
