{
  "name": "react-todo",
  "version": "1.0.0",
  "private": true,
  "description": "React TODO App",
  "main": "server.js",
  "author": "ybiquitous <10koba01@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ybiquitous/react-todo.git"
  },
  "engines": {
    "node": "6"
  },
  "scripts": {
    "start": "DEBUG=app node -r babel-register server.js",
    "browser-sync": "browser-sync start --config bs-config.js --color",
    "build": "webpack",
    "watch": "concurrently \"webpack --watch --color\" \"npm run browser-sync\"",
    "test": "mocha --reporter dot --compilers jsx:babel-register test",
    "test:watch": "npm test -- --watch",
    "test:e2e": "wdio wdio.conf.js",
    "eslint:all": "eslint --ext=.js,.jsx --ignore-path=.gitignore --max-warnings=0 .",
    "stylelint:all": "stylelint --ignore-path=.gitignore \"./src/styles/**/*\"",
    "lint": "concurrently \"npm run eslint:all\" \"npm run stylelint:all\"",
    "prewebdriver": "webdriver-manager update",
    "webdriver": "webdriver-manager start",
    "postinstall": "if [ $BUILD_ASSETS ]; then npm run build -- -p; fi",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.@(js|jsx)": [
      "eslint --fix --max-warnings=0",
      "git add"
    ],
    "*.@(css|scss)": "stylelint"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "dependencies": {
    "babel-register": "^6.14.0",
    "debug": "^2.2.0",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-tap-or-click": "^0.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.5.0",
    "browser-sync": "^2.18.1",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.10.2",
    "eslint-config-ybiquitous": "github:ybiquitous/eslint-config-ybiquitous",
    "extract-text-webpack-plugin": "^1.0.1",
    "lint-staged": "^3.2.0",
    "mocha": "^3.0.2",
    "postcss-loader": "^1.2.0",
    "pre-commit": "^1.1.3",
    "precss": "^1.4.0",
    "react-addons-test-utils": "^15.4.0",
    "sinon": "^1.17.5",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^15.0.0",
    "wdio-mocha-framework": "^0.5.4",
    "webdriver-manager": "^11.0.0",
    "webdriverio": "^4.2.8",
    "webpack": "^1.13.2",
    "webpack-manifest-plugin": "^1.0.1"
  }
}
